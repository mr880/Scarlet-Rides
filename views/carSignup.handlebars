<head>
  <title>Car Signup Page</title>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootswatch/3.3.7/lumen/bootstrap.min.css">
  <link href="../public/stylesheets/style.css" rel="stylesheet">
</head>

<body class="logBody">
  <nav class="navbar navbar-default navbar-fixed-top" id="nav1">
    <div class="container">

      <div class="navbar-header">
        <h3 id="f0">SCARLET <img id="ruLogo" src="http://content.sportslogos.net/logos/33/817/full/6853_rutgers_scarlet_knights-alternate-2001.png" alt="leaf" style="width:35px;">IDES</h3>
        <a class="navbar-brand" href="/members">Menu</a>
        <a class="navbar-brand" href="/accountInfo">Account</a>
        <a class="navbar-brand" href="/post">Post a Ride</a>
        <a class="navbar-brand" href="/logout">Logout</a>
      </div>

    </div>
  </nav>
  <br><br><br><br><br><br><br><br>
  <div class="container">
    <div class="row">
      <div class="col-md-4 col-md-offset-3" id="align-left">
        <h2 class="fontHere">Sign up to drive...</h2>
        <form class="carSignup">
          <div class="form-group">
            <label id="fontHere" for="carYear">Vehicle Year</label>
            <input type="text" class="form-control" id="year-input" placeholder="eg. 2000">
          </div>
          <div class="form-group">
            <label id="fontHere" for="carType">Vehicle Model</label>
            <input type="text" class="form-control" id="type-input" placeholder="eg. Honda Civic">
          </div>
          <div class="form-group">
            <label id="fontHere" for="carColor">Vehicle Color</label>
            <input type="text" class="form-control" id="color-input" placeholder="eg. Blue">
          </div>
          <div class="form-group">
            <label id="fontHere" for="carSeats">Number of Available Seats</label>
            <input type="text" class="form-control" id="seats-input" placeholder="eg. 2">
          </div>
          <div style="display: none" id="alert" class="alert alert-danger" role="alert">
            <span class="glyphicon glyphicon-exclamation-sign" aria-hidden="true"></span>
            <span class="sr-only">Error:</span> <span class="msg"></span>
          </div>
          <input type="submit" id="fontHere" value="Sign Up Vehicle" class="btn btn-default"></input>

        </form>
        <br />


      </div>

    </div>
  </div>

  <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.2.1/jquery.min.js"></script>
  <script type="text/javascript" src="/js/carSignup.js"></script>

</body>

          <div class="form-group">
            <label id="fontHere" for="carYear">Vehicle Year</label>
            <input type="text" class="form-control" id="year-input" placeholder="eg. 2000">
          </div>
          <div class="form-group">
            <label id="fontHere" for="carType">Vehicle Model</label>
            <input type="text" class="form-control" id="type-input" placeholder="eg. Honda Civic">
          </div>
          <div class="form-group">
            <label id="fontHere" for="carColor">Vehicle Color</label>
            <input type="text" class="form-control" id="color-input" placeholder="eg. Blue">
          </div>
          <div class="form-group">
            <label id="fontHere" for="carSeats">Number of Available Seats</label>
            <input type="text" class="form-control" id="seats-input" placeholder="eg. 2">
          </div>
          <div style="display: none" id="alert" class="alert alert-danger" role="alert">
            <span class="glyphicon glyphicon-exclamation-sign" aria-hidden="true"></span>
            <span class="sr-only">Error:</span> <span class="msg"></span>
          </div>
          <input type="submit" id="fontHere" value="Sign Up Vehicle" class="btn btn-default"></input>

        </form>
        <br />


      </div>

    </div>

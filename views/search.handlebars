<head>
  <title>Rideshare Project</title>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootswatch/3.3.7/lumen/bootstrap.min.css">
  <link href="stylesheets/style.css" rel="stylesheet">
</head>

<body>
  <nav class="navbar navbar-default">
    <div class="container-fluid">
      <div class="navbar-header">
      </div>
    </div>
  </nav>
  <div class="container">
    <div class="row">
      <div class="col-md-6 col-md-offset-3">
        <h2><b>Rides Available</h2>
        {{#each posts}}


              <div>
                <h3><b>From: </b> {{this.from}} <b>To: </b> {{this.to}}</h3>

                <h5>{{this.createdAt}}</h5>
                <h5><b>Notes: </b> {{this.notes}}</h5>
                <h5><b>Time: </b> {{this.time}}</h5>
                <form class="pickRide">
                  <input input type="hidden" type="text" name="post_id" id="chosen" value={{this.id}}>
                  <button type="submit" class="btn btn-default">Pick Ride.</button>
                </form>
                </br>
              </div>


        {{/each}}

      
        <br />

      </div>
    </div>
  </div>

  <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.2.1/jquery.min.js"></script>
  <script type="text/javascript" src="/js/search.js"></script>

</body>
